---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";
import { getCollection } from "astro:content";
import getSortedPosts from "@utils/getSortedPosts";
import Card from "@components/Card";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    activeNav?: "search" | "blog" | "archives" | "members" | "about";
  };
}

const { frontmatter } = Astro.props;
const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured); //resources
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav={frontmatter.activeNav || "about"} />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="prose max-w-3xl prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
      <slot />
    </section>
    <section class="prose max-w-3xl prose-img:border-0 mt-5">
      <h2 class="text-xl tracking-wider sm:text-2xl">Featured Posts</h2>
    </section>
    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/blog/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                  resources={true}
                />
              ))}
            </ul>
          </section>
        </>
      )
    }
  </main>

  <Footer />
</Layout>
